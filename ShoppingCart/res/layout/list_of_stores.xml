<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:id="@+id/listOfStoresTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:gravity="center_horizontal"
        android:text="List of Stores"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selectListOfStoresTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/listOfStoresTextView"
        android:gravity="center_horizontal"
        android:text="Select Store To Manage"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/storeListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/selectListOfStoresTextView2"
        android:gravity="center_horizontal" >

    </ListView>

  <Button
      android:id="@+id/homeButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:background="@drawable/home_button_icon"
      android:onClick="mainWindow"
      android:visibility="visible" />

</RelativeLayout>
